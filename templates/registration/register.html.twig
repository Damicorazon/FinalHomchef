{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<body class="bodyAjouterMenu">
    <h1>Enregistrement</h1>

    <div class="container">


        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.mail) }}
        {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe'
        }) }}
        <a href="{{ path("cgv") }}">Veuillez prendre connaissance des C.G.U</a>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-outline-info mb-5 mt-5">Enregistrement</button>
        {{ form_end(registrationForm) }}
    </div>
</body>
{% endblock %}
