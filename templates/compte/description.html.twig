{% extends 'base.html.twig' %}

{% block title %}Fiche Membre
{% endblock %}

{% block body %}
	<div class="container ficheMenu">

		<h1>Bonjour {{ membre.prenom }}</h1>

		<ul class="col-4 row justify-content-start nav nav-tabs">
			<li>
				<a href="{{ path("compte", {"id": membre.id }) }}" class="nav-link">
					<strong>Informations principal</strong>
				</a>
			</li>
			{% if is_granted("ROLE_CHEF") %}
			<li>
				<a href="{{ path("compte_description", {"id": membre.id }) }}" class="nav-link active">
					<strong>Complémentaires</strong>
				</a>
			</li>
			{% endif %}
		</ul>

		<ul class="list-group list-group-flush">
					<li class="list-group-item">
				<strong>Numéro de Siret :</strong>
				{{ membre.siret}}
			</li>
			<li class="list-group-item">
				<strong>Numéro de TVA :</strong>
				{{ membre.tva}}
			</li>
			<li class="list-group-item">
				<strong>Votre description :</strong>
				{{ membre.descriptif}}
			</li>
			<li class="list-group-item">
				<strong>Les langues que vous parlez :</strong>
				{{ membre.langue}}
			</li>
			<li class="list-group-item">
				<strong>Votre zone de déplacement :</strong>
				{{ membre.zone }}
			</li>
		</ul>
	</table>
	<div>
		<a href="{{ path("compte_modifier", {"id": membre.id }) }}" class="btn btn-outline-info mb-5 mt-5">Modifier ma description</a>
	</div>
</div>{% endblock %}

